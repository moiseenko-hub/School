@model WebStoryFroEveryting.Models.SchoolAuth.SchoolAuthViewModel

@{
Layout = "_LayoutLessons";
}

@section Styles {
<link href="~/css/Lessons/login.css" rel="stylesheet" />
}

<div class="login-container">
    @if (ViewData.ModelState.ContainsKey("NotFound") && ViewData.ModelState["NotFound"].Errors.Count > 0)
    {
    <div class="error-message">
        @ViewData.ModelState["NotFound"].Errors[0].ErrorMessage
    </div>
    }

    <form method="post" action="/SchoolAuth/Login" class="login-form">
        <h2 class="form-title">Вход в систему</h2>

        <div class="form-group">
            @Html.TextBoxFor(x => x.Username, new { placeholder = "Имя пользователя", @class = "input-field", required = true })
            @Html.ValidationMessageFor(x => x.Username, null, new { @class = "validation-message" })
        </div>

        <div class="form-group">
            @Html.TextBoxFor(x => x.Password, new { placeholder = "Пароль", type = "password", @class = "input-field", required = true })
            @Html.ValidationMessageFor(x => x.Password, null, new { @class = "validation-message" })
        </div>

        <div class="form-group">
            <button type="submit" class="login-button">Войти</button>
        </div>
    </form>
</div>
