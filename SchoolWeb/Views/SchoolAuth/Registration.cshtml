@page
@model WebStoryFroEveryting.Models.SchoolAuth.SchoolAuthViewModel
@{
Layout = "_LayoutLessons";
}
@section Styles {
<link href="~/css/Lessons/registration.css" rel="stylesheet" />
}

<div class="login-container">
    <form method="post" action="/SchoolAuth/Registration" class="login-form">
        <h2 class="form-title">Регистрация</h2>

        @if (ViewBag.ErrorMessage != null)
        {
        <div class="error-message">@ViewBag.ErrorMessage</div>
        }

        <div class="form-group">
            @Html.TextBoxFor(x => x.Username, new
            {
            @class = "input-field",
            placeholder = "Имя пользователя"
            })
            <span class="validation-message">
                @Html.ValidationMessageFor(x => x.Username)
            </span>
        </div>

        <div class="form-group">
            @Html.TextBoxFor(x => x.Email, new
            {
            @class = "input-field",
            placeholder = "Email"
            })
            <span class="validation-message">
                @Html.ValidationMessageFor(x => x.Email)
            </span>
        </div>

        <div class="form-group">
            @Html.PasswordFor(x => x.Password, new
            {
            @class = "input-field",
            placeholder = "Пароль"
            })
            <span class="validation-message">
                @Html.ValidationMessageFor(x => x.Password)
            </span>
        </div>

        <button type="submit" class="login-button">Зарегистрироваться</button>
    </form>
</div>
